# Supabase Configuration
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here

# Modal Configuration
MODAL_TOKEN_ID=your-modal-token-id
MODAL_TOKEN_SECRET=your-modal-token-secret

# Cloudflare R2 Configuration
R2_ACCOUNT_ID=your-account-id
R2_ACCESS_KEY_ID=your-access-key
R2_SECRET_ACCESS_KEY=your-secret-key
R2_BUCKET_NAME=your-bucket-name
R2_ENDPOINT_URL=https://your-account-id.r2.cloudflarestorage.com

# HuggingFace token for accessing gated models (Llama, etc.)
HF_TOKEN=your-huggingface-token

# WandB token for experiment tracking (optional)
WANDB_API_KEY=your-wandb-key

# Security Configuration
ENABLE_RATE_LIMITING=true
MAX_REQUEST_SIZE_MB=20
MAX_CONCURRENT_RUNS_PER_USER=5

# CORS Configuration (for web dashboard access)
CORS_ORIGINS=https://yourdomain.com,http://localhost:3000

# Logging
LOG_LEVEL=INFO
ENABLE_AUDIT_LOGGING=true

# Environment
ENVIRONMENT=development

# Billing Configuration
# Used to estimate minimum balance required for a run
MIN_TRAINING_MINUTES=30

# Checkpoint cost multiplier - adds buffer for save operations
# Used to estimate minimum balance required for a run
# 1.5 = require 50% extra for checkpointing
CHECKPOINT_COST_MULTIPLIER=1.5

# Absolute minimum balance (floor value regardless of GPU)
ABSOLUTE_MIN_BALANCE=2.00

# Minimum balance threshold before stopping run
MIN_BALANCE_THRESHOLD=0.50

# Increment size for charging (dollars)
CHARGE_INCREMENT=1.00